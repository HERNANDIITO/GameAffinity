@model GameAffinityGen.ApplicationCore.EN.GameAffinity.IndividuoEN

<div class="col-4 col-md-3 col-lg-2 videogame">
    <img src=@Model.Img class="videogameImage" onerror="this.src='Images/missing_img.jpg';" />
    <span class="videogameName">
        @Html.ActionLink(
            linkText: Model.Nombre, // El texto del enlace será el nombre de la empresa
            actionName: "Details", // El nombre de la acción del controlador
            controllerName: "Individuo", // El nombre del controlador
            routeValues: new { id = Model.Id } // Parámetro que se enviará a la acción
        )
    </span>
</div>
