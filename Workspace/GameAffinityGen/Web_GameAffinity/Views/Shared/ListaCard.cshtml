@model GameAffinityGen.ApplicationCore.EN.GameAffinity.ListaEN

<div class="card mb-3" style="max-width: 450px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src=@Model.Img class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Nombre</h5>
                <p class="card-text">@Model.Descripcion</p>
                <p class="card-text">Juegos: @Model.Videojuegos.Count</p>
            </div>
        </div>
    </div>
</div>