@model Web_GameAffinity.Models.VideojuegoDetailsViewModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Details";
    int tieneRes = 0;
}

<main class="main-content-profile">
    <div class="full-profile-container">
        <div class="perfil-usuario">
            <div class="foto-usuario">
                <img src="/Images/@Model.Videojuego.Imagen.FileName" alt="Imagen del Videojuego" />
                @if (Context.Session.Get<ConfiguracionPerfilViewModel>("user") != null){
                    @foreach(var resenya in Model.Resenyas){
                        if(resenya.Autor_resenya.Id == Context.Session.Get<ConfiguracionPerfilViewModel>("user").id){
                            tieneRes = 1;
                            break;
                        }
                    }
                    @if(tieneRes == 0){
                        <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#resenyaModal">
                            Añadir Reseña
                        </button>
                    } else {
                        <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#resenyaModal">
                            Actualizar Reseña
                        </button>
                    }
                    }
            </div>
            <div class="info-usuario">
                <h2 class="Name-User-Profile">@Model.Videojuego.Nombre</h2>
                <h4>Descripción:</h4>
                <p>@Model.Videojuego.Descripcion</p>
                <h4>Nota Media:</h4>
                <p>@Model.Videojuego.NotaMedia</p>
                <h4>Fecha de Lanzamiento:</h4>
                <p>@Model.Videojuego.FechaLanzamiento</p>
                <h4>Género:</h4>
                <p>@Model.Videojuego.Genero</p>
                <div class="boton-configuracion">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Videojuego.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        <h4>Reseñas</h4>
        @if (Model.Resenyas != null && Model.Resenyas.Any())
        {
            <ul>
                @foreach (var resenya in Model.Resenyas)
                {
                    <li>pito</li>
                }
            </ul>
        }
        else
        {
            <p>No hay reseñas disponibles.</p>
        }
    </div>

</main>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Videojuego.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal para añadir reseña -->
@Html.Partial("resenyaModal", Model)