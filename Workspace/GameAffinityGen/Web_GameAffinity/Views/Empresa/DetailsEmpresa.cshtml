@model Web_GameAffinity.Models.DetailsEmpresaViewModel

@{
    ViewData["Title"] = "DetailsEmpresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de la empresa</h1>
<hr />

<div>
    <img class="caratula" src="/Images/@Model.Imagen.FileName">
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            Descripción:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt class = "col-sm-2">
            Nota:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nota)
        </dd>
    </dl>

    <div class="videogameList row">

        @foreach (var item in Model.videojuegos)
        {
            @Html.Partial("videojuegoCard", item)
        }
    </div>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
