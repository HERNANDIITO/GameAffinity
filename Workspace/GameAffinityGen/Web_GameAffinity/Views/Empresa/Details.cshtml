@model Web_GameAffinity.Models.DetailsEmpresaViewModel

@{
    ViewData["Title"] = "DetailsEmpresa";
}

<main class="main-content-profile">
    <div class="full-profile-container">
        <div class="perfil-usuario">
            <div class="foto-usuario">
                <div class="caratulaNota">
                    <img class="imagenUsuario" src="/Images/@Model.Imagen.FileName" alt="Imagen de la Empresa" />
                    @if (Model.Nota != null)
                    {
                        <span class="nota">@Model.Nota</span>
                    }
                </div>
            </div>
            <div class="info-usuario">
                <h2 class="Name-User-Profile">@Model.Nombre</h2>
                <h4>Descripción:</h4>
                <p>@Model.Descripcion</p>
            </div>
        </div>

        
        <br />
        <h4>Videojuegos desarrollados</h4>
        <div class="videogameList row">
            @if (Model.Videojuegos != null && Model.Videojuegos.Any())
            {
                @foreach (var item in Model.Videojuegos)
                {
                    @Html.Partial("videojuegoCardDetails", item)
                }
            }
            else
            {
                <p>No hay videojuegos registrados para esta empresa.</p>
            }
        </div>

        <br />
        <h4>Desarrolladores asociados</h4>
        <div class="videogameList row">
            @if (Model.Individuos != null && Model.Individuos.Any())
            {
                @foreach (var item in Model.Individuos)
                {
                    @Html.Partial("individuoCardDetails", item)
                }
            }
            else
            {
                <p>No hay individuos asociados a esta empresa.</p>
            }
        </div>
    </div>
</main>